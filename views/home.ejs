<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/style.css">
    <title>Home</title>
</head>
<body>
    <nav>
        <h4>E-SHOPPING</h4>
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/login">Login</a></li>
            <!-- <li><a href="/register">Register</a></li> -->
            <li><a href="/logout" role="button">Logout</a></li>
        </ul>
    </nav>
    <div class="container mt-4">
        <div class="jumbotron">
            <h1 class="display-4">Welcome, <%= user %>!</h1><br>
            <!-- <a class="btn btn-success btn-lg" href="/logout" role="button">LOGOUT</a> -->
             <div>
                 <!-- <h2 class="display-6">Our Products</h2> -->
                    <div style="display: flex; flex-wrap: wrap; gap: 20px;">
                        <% products.forEach(product => { %>
                            <div style="border: 1px solid #ddd; padding: 10px; width: 200px;">
                                <a href="/product/<%= product.id %>">
                                <img src="/images/<%= product.image %>" alt="<%= product.name %>" style="width: 100%;">
                                </a>
                                <h3><%= product.name %></h3>
                                <p><%= product.description %></p>
                                <p><strong>Rs.<%= product.price %></strong></p>
                                <!-- <button>Add to Cart</button> -->
                            </div>
                        <% }) %>
                    </div>
                    </div>
    <!-- <a href="/logout">Logout</a> -->
     </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
